<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_source_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="동아일보"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_source_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="리오넬 메시 호날두와 만나"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_source_media"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_source_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="language : en"
        android:layout_marginStart="46dp"
        app:layout_constraintTop_toBottomOf="@+id/text_source_content"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_source_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="country : en"
        android:layout_marginStart="46dp"
        app:layout_constraintStart_toEndOf="@+id/text_source_language"
        app:layout_constraintTop_toBottomOf="@+id/text_source_content" />

</androidx.constraintlayout.widget.ConstraintLayout>